#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main()
{
   char copia_string [50];
   char destino [50];
   
   printf ("Por favor digite uma palavra: ");
   scanf("%s", &copia_string[0]);
   printf ("\n Antes de copiar: \nvetor1: %s\nvetor 2: %s\n",copia_string, destino );
   strcpy (destino,copia_string);
   printf ("\n Depois de copiar: \nvetor1: %s\nvetor 2: %s\n",copia_string, destino );
   
   return 0;
   
   
}
